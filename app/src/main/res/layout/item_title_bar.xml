<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_tool_bar_height"
    android:clipToPadding="true"
    android:id="@+id/titleBar"
    android:fitsSystemWindows="true"
    android:background="#55ace0">
    <LinearLayout
        android:id="@+id/item_title_back_layout"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/item_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/item_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_16"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:id="@+id/item_title_back_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tvTitleBarRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="筛选"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_15"/>
        <ImageView
            android:id="@+id/ivTitleBarRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>